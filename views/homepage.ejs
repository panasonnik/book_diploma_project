<!DOCTYPE html>
<html lang="<%= translations.lang %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <title>Welcome Page</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <%- include('partials/navbar', { translations }) %>
      <button
        class="round-btn to-top-btn"
        onclick="topFunction()"
        id="toTopBtn"
        title="Go to top"
      >
        <svg
          class="to-top-btn__icon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
        >
          <path
            d="M233.4 105.4c12.5-12.5 32.8-12.5 45.3 0l192 192c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L256 173.3 86.6 342.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l192-192z"
          />
        </svg>
      </button>
      <div class="content content--flexbox">
        <div class="sidebar" id="container">
          <h2 class="heading heading--bold">
            <%= translations.home.navigation %>
          </h2>
          <div class="sidebar__link-container">
            <a
              class="sidebar__link sidebar__link--active"
              href="/<%= translations.lang %>/profile"
            >
              <p class="subheading subheading--regular">
                <%= translations.home.forYou %>
              </p>
            </a>
            <% for (let genre in booksByGenre) { %> <% if (booksByGenre[genre]
            && booksByGenre[genre].length > 0) { %>
            <a class="sidebar__link" href="#<%= genre%>">
              <p class="subheading subheading--regular">
                <%= translations.home[genre]%>
              </p>
            </a>
            <% } %> <% } %>
          </div>
        </div>
        <div class="for-you__container">
          <h1 class="heading heading--bold mb">
            <%= translations.home.topPicks %>
          </h1>

          <% if(showUpdateButton) { %>

          <form
            action="/<%= translations.lang %>/update-book-scores-liked"
            method="POST"
          >
            <input type="hidden" />
            <button type="submit" class="submit-btn submit-btn--outline submit-btn--small mb">
              <%= translations.home.updateRecsLiked %>
            </button>
          </form>
          <% } %>
          <div class="book-grid colored-background" id="bookGrid">
            <% if (books && books.length > 0) { %> <% books.forEach(book => { %>
            <div class="book-card">
              <div class="book-card__content">
                <div class="book-card__image-container">
                  <img
                    src="<%= book.image_url %>"
                    alt="<%= book[`title_${translations.lang}`] %> cover"
                    class="book-card__cover-image book-cover"
                    onclick="openModal('<%= book[`title_${translations.lang}`] %>', '<%= book[`author_${translations.lang}`] %>', '<%= book[`description_${translations.lang}`] %>','<%= book.image_url %>', '<%= book.year_published %>', '<%= book.number_of_pages %>', '<%= book[`genre_name_${translations.lang}`] %>', '<%= book[`language_${translations.lang}`] %>')"
                    onerror="this.src='/images/onerror_image.jpg';"
                  />
                  <form
                    action="/<%= translations.lang %>/save-book"
                    method="POST"
                  >
                    <input
                      type="hidden"
                      name="book_id"
                      value="<%= book.book_id %>"
                    />
                    <button
                      type="submit"
                      class="round-btn like-btn <%= book.is_liked ? 'liked' : '' %>"
                      data-book-id="<%= book.book_id %>"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        class="like-icon"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                        ></path>
                      </svg>
                    </button>
                  </form>
                </div>
                <div class="book-card__details">
                  <h3 class="subheading subheading--regular">
                    <%= book[`title_${translations.lang}`] %>
                  </h3>
                  <p class="subheading subheading--small subheading--light">
                    <%= book[`author_${translations.lang}`] %>
                  </p>
                </div>
              </div>
              <a
                href="/<%= translations.lang %>/book/<%= book.title_en %>"
                class="submit-btn submit-btn--outline"
                ><%= translations.home.read %></a
              >
            </div>
            <% }); %> <% } else { %>
            <p><%= translations.home.noBooks%></p>
            <% } %>
          </div>

          <h1 class="heading heading--bold mt-5">
            <%= translations.home.booksByGenre%>
          </h1>
          <% for (let genre in booksByGenre) { %> <% if (booksByGenre[genre] &&
          booksByGenre[genre].length > 0) { %>
          <div class="heading-with-divider" id="<%=genre%>">
            <h2 class="heading mt mb heading-with-divider__heading">
              <%= translations.home[genre]%>
            </h2>
            <span class="divider"></span>
          </div>

          <div class="book-grid">
            <% booksByGenre[genre].forEach(book => { %>
            <div class="book-card">
              <div class="book-card__content">
                <div class="book-card__image-container">
                  <img
                    src="<%= book.image_url %>"
                    alt="<%= book[`title_${translations.lang}`] %> cover"
                    class="book-card__cover-image book-cover"
                    onclick="openModal('<%= book[`title_${translations.lang}`] %>', '<%= book[`author_${translations.lang}`] %>', '<%= book[`description_${translations.lang}`] %>','<%= book.image_url %>', '<%= book.year_published %>', '<%= book.number_of_pages %>', '<%= book[`genre_name_${translations.lang}`] %>', '<%= book[`language_${translations.lang}`] %>')"
                    onerror="this.src='/images/onerror_image.jpg';"
                  />
                  <form
                    action="/<%= translations.lang %>/save-book"
                    method="POST"
                  >
                    <input
                      type="hidden"
                      name="book_id"
                      value="<%= book.book_id %>"
                    />
                    <button
                      type="submit"
                      class="round-btn like-btn <%= book.is_liked ? 'liked' : '' %>"
                      data-book-id="<%= book.book_id %>"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        class="like-icon"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                        ></path>
                      </svg>
                    </button>
                  </form>
                </div>
                <div class="book-card__details">
                  <h3 class="subheading subheading--regular">
                    <%= book[`title_${translations.lang}`] %>
                  </h3>
                  <p class="subheading subheading--small subheading--light">
                    <%= book[`author_${translations.lang}`] %>
                  </p>
                </div>
              </div>
              <a
                href="/<%= translations.lang %>/book/<%= book.title_en %>"
                class="submit-btn submit-btn--outline"
                ><%= translations.home.read %></a
              >
            </div>
            <% }); %>
          </div>
          <% } %> <% } %>
        </div>
      </div>
      <%- include('partials/modal', { translations }) %>
    </div>
    <script>
      document.querySelectorAll('.like-button').forEach((button) => {
        btn.addEventListener('click', () => {
          btn.classList.toggle('liked');
        });
      });
    </script>
    <script src="/js/openModal.js"></script>
    <script src="/js/goToTopArrow.js"></script>
  </body>
</html>
